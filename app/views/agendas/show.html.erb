<header>
  <%= render "navbar" %>
</header>

<div class="header-menu" id="header-title">
  <p>
    Estos son los tableros que estan en la agenda <%= @agenda.name %>
  </p>
</div>
</header>

<div class="container">
  <div class="row pictograms">
    <% @boards.each do |board| %>
    <div class="col s12 m3">
      <div class="card">
        <div class="card-image">
          <%= link_to image_tag(board.image), "/disableds/#{@disabled.id}/agendas/#{@agenda.id}/boards/#{board.id}" %>
          <span class="card-title"><%= link_to "#{board.name}", "/disableds/#{@disabled.id}/agendas/#{@agenda.id}/boards/#{board.id}" %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
