<header>
  <%= render "navbar" %>
</header>

<div class="row">
  <div class="s12 m12 center-align">
    <h5>Tableros de la agenda
      <h3>
        <%= @agenda.name %>
      </h3>
    </h5>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="s3 m2 left-align">
      <h5><%= link_to 'Volver', disabled_agendas_path(@disabled) %></h5>
    </div>
  </div>

  <div class="row pictograms">
    <% @boards.each do |board| %>
    <div class="col s12 m3">
      <div class="card">
        <div class="card-image">
          <%= link_to image_tag(board.image), disabled_agenda_board_pictograms_path(@disabled, @agenda, board) %>
          <span class="card-title"><%= link_to "#{board.name}", disabled_agenda_board_pictograms_path(@disabled, @agenda, board) %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
